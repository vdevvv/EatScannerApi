generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(uuid())
  email                String   @unique
  hashedPassword       String?  @map("hashed_password")
  hashedRt             String?  @map("hashed_rt")
  fullName             String?  @map("full_name")
  userName             String?  @unique @map("user_name")
  phone                String?  @unique
  role                 Role     @default(USER)
  avatar               String   @default("https://res.cloudinary.com/djdf9jke8/image/upload/v1765534297/profile_m2necg_fdne3f.png")
  avatarPublicId       String?
  bio                  String?
  pushToken            String?
  isEmailVerified      Boolean  @default(false) @map("is_email_verified")
  notificationsEnabled Boolean  @default(true) @map("notifications_enabled")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")
  selectedTags         Tag[]    @relation("UserSelectedTags")

  verificationCodes      VerificationCode[]
  emailVerificationToken VerificationToken[]
  sentFriendRequests     Friendship[]        @relation("SentRequests")
  receivedFriendRequests Friendship[]        @relation("ReceivedRequests")
  favorites              Favorite[]
  savedItems             SavedItem[]
  order                  Order[]
  Notification           Notification[]
  Restaurant             Restaurant[]

  @@map("users")
}

model VerificationCode {
  id        String           @id @default(uuid())
  userId    String
  code      String
  type      VerificationType
  payload   String?
  isUsed    Boolean          @default(false) @map("is_used")
  expiresAt DateTime         @map("expires_at")
  createdAt DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, code], name: "user_code_idx")
  @@map("verification_codes")
}

model VerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

model Friendship {
  id          String       @id @default(uuid())
  requesterId String       @map("requester_id")
  receiverId  String       @map("receiver_id")
  status      FriendStatus @default(PENDING)
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  requester User @relation("SentRequests", fields: [requesterId], references: [id], onDelete: Cascade)
  receiver  User @relation("ReceivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([requesterId, receiverId])
  @@map("friendships")
}

model Restaurant {
  id           String         @id @default(uuid())
  name         String
  city         String
  country      String
  address      String
  latitude     Float
  longitude    Float
  type         RestaurantType @default(RESTAURANT)
  ownerId      String?
  careemUrl    String?        @map("careem_url")
  noonFoodUrl  String?        @map("noon_food_url")
  talabatUrl   String?        @map("talabat_url")
  keetaUrl     String?        @map("keeta_url")
  deliverooUrl String?        @map("deliveroo_url")
  placeId      String         @unique @map("place_id")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  menu  Menu?
  order Order[]
  owner User?   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([latitude, longitude])
  @@map("restaurants")
}

model Menu {
  id           String   @id @default(uuid())
  restaurantId String   @unique @map("restaurant_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  categories Category[]

  @@map("menus")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  menuId    String   @map("menu_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  menu  Menu       @relation(fields: [menuId], references: [id], onDelete: Cascade)
  items MenuItem[]

  @@map("categories")
}

model MenuItem {
  id          String      @id @default(uuid())
  name        String
  price       Decimal     @db.Decimal(10, 2)
  discount    Int         @default(0)
  description String?
  image       String
  video       String?
  badges      DishBadge[] @map("badges")
  highlighted Boolean     @default(false)
  categoryId  String      @map("category_id")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  tags        Tag[]
  favoritedBy Favorite[]
  savedBy     SavedItem[]

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  order    Order[]

  @@map("menu_items")
}

model Tag {
  id           String     @id @default(uuid())
  type         TagType
  name         String     @unique
  icon         String?
  slug         String     @unique
  createdAt    DateTime   @default(now()) @map("created_at")
  isSelectable Boolean    @default(false) @map("is_selectable")
  items        MenuItem[]
  selectedBy   User[]     @relation("UserSelectedTags")

  @@map("tags")
}

model Favorite {
  userId     String   @map("user_id")
  menuItemId String   @map("menu_item_id")
  createdAt  DateTime @default(now()) @map("created_at")

  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  @@id([userId, menuItemId])
  @@map("favorites")
}

model SavedItem {
  userId     String   @map("user_id")
  menuItemId String   @map("menu_item_id")
  createdAt  DateTime @default(now()) @map("created_at")

  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  @@id([userId, menuItemId])
  @@map("saved_items")
}

model Order {
  id                String          @id @default(uuid())
  userId            String          @map("user_id")
  menuItemId        String          @map("menu_item_id")
  restaurantId      String          @map("restaurant_id")
  deliveryService   String          @map("delivery_service")
  price             Decimal         @db.Decimal(10, 2)
  createdAt         DateTime        @default(now()) @map("created_at")
  updatedAt         DateTime        @updatedAt @map("updated_at")
  badgesSnapshot    DishBadge[]     @map("badges_snapshot")
  venueTypeSnapshot RestaurantType? @map("venue_type_snapshot")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  menuItem   MenuItem   @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  body      String
  data      Json?
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

enum VerificationType {
  email_verification
  password_reset
  phone_verification
}

enum FriendStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum TagType {
  Cuisine
  Meal_Type
  Dietary_Restrictions
  Spice_Level
}

enum RestaurantType {
  CAFE
  RESTAURANT
}

enum DishBadge {
  SPICY
  DESSERT
  HEALTHY
}

enum Role {
  USER
  ADMIN
}
